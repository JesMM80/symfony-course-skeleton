{% extends 'base.html.twig' %}

{% block title %}Prueba index{% endblock %}

{% block body %}
    <h1>Prueba index</h1>

    <table class="table bg-blue-100 rounded-lg shadow-md">
        <thead>
            <tr>
                <th class="bg-blue-300">Id</th>
                <th>Name</th>
                <th>Number</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prueba in pruebas %}
            <tr>
                <td>{{ prueba.id }}</td>
                <td>{{ prueba.name }}</td>
                <td>{{ prueba.number }}</td>
                <td>
                    <a href="{{ path('app_prueba_show', {'id': prueba.id}) }}">show</a>
                    <a href="{{ path('app_prueba_edit', {'id': prueba.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_prueba_new') }}">Create new</a>
{% endblock %}
